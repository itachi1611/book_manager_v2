<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.foxy.bookmanager.project">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.foxy.bookmanager.project.activity.ActivityStart"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.foxy.bookmanager.project.activity.LoginActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.foxy.bookmanager.project.activity.RegisterActivity"
            android:screenOrientation="portrait"
            android:parentActivityName="com.foxy.bookmanager.project.activity.LoginActivity"/>

        <activity
            android:name="com.foxy.bookmanager.project.activity.ActivityHome"
            android:label="@string/title_activity_home"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />

        <activity
            android:name="com.foxy.bookmanager.project.activity.ActivityUser"
            android:screenOrientation="portrait"
            android:parentActivityName="com.foxy.bookmanager.project.activity.ActivityHome"/>


        <activity
            android:name="com.foxy.bookmanager.project.activity.ActivityStyleBook"
            android:screenOrientation="portrait"
            android:parentActivityName="com.foxy.bookmanager.project.activity.ActivityHome"/>

        <activity
            android:name="com.foxy.bookmanager.project.activity.ActivityBook"
            android:screenOrientation="portrait"
            android:parentActivityName="com.foxy.bookmanager.project.activity.ActivityHome"
            />

        <activity
            android:name="com.foxy.bookmanager.project.activity.ActivityBill"
            android:screenOrientation="portrait"
            android:parentActivityName="com.foxy.bookmanager.project.activity.ActivityHome"/>

        <activity
            android:name="com.foxy.bookmanager.project.activity.ActivityBookTop10"
            android:screenOrientation="portrait"
            android:parentActivityName="com.foxy.bookmanager.project.activity.ActivityHome"/>

        <activity
            android:name="com.foxy.bookmanager.project.activity.ActivtiyStatistics"
            android:screenOrientation="portrait"
            android:parentActivityName="com.foxy.bookmanager.project.activity.ActivityHome"/>

        <activity
            android:name="com.foxy.bookmanager.project.activity.ActivityBillDetail"
            android:screenOrientation="portrait"
            android:parentActivityName="com.foxy.bookmanager.project.activity.ActivityBill"/>

    </application>

</manifest>